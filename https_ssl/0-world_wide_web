#!/usr/bin/env bash

# Function to display the subdomain info
get_subdomain_info() {
    local domain=$1
    local subdomain=$2

    # Run dig to get the A record for the subdomain
    result=$(dig +short $subdomain.$domain)

    if [ -z "$result" ]; then
        echo "No record found for $subdomain.$domain"
    else
        echo "The subdomain $subdomain is a A record and points to $result"
    fi
}

# Check if the domain argument is provided
if [ -z "$1" ]; then
    echo "Domain argument is required."
    exit 1
fi

domain=$1

# If a specific subdomain is provided
if [ -n "$2" ]; then
    subdomain=$2
    get_subdomain_info $domain $subdomain
else
    # Default subdomains to check
    subdomains=("www" "lb-01" "web-01" "web-02")

    # Loop through each subdomain and get the information
    for subdomain in "${subdomains[@]}"; do
        get_subdomain_info $domain $subdomain
    done
fi
